<section class="section" id="contact">
    <div class="container text-center">
        <p class="section-subtitle">How can you communicate?</p>
        <h6 class="section-title mb-5">Contact Me</h6>
        <form action="" class="contact-form col-md-10 col-lg-8 m-auto">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <input type="text" size="50" id="nameField" class="form-control" value="Huỳnh Văn Hiệp" readonly>
                </div>
                <div class="form-group col-sm-6">
                    <input type="email" id="emailField" class="form-control" value="huynhhiepvan1998@gmail.com" readonly>
                    <button type="button" onclick="copyEmail()">Copy</button>

                </div>
                <div class="form-group col-sm-6">
                    <input type="tel" id="phoneField" class="form-control" value="0767537243" readonly>
                    <button type="button" onclick="copyPhone()">Copy</button>
                </div>
            </div>
        </form>
    </div>
</section>

<script>
    function copyEmail() {
        var email = document.getElementById("emailField").value;

        var copyText = email 
        navigator.clipboard.writeText(copyText).then(function () {
            alert("copy success!");
        }, function () {
            alert("Failed to copy!");
        });
    }
    function copyPhone() {
        var phone = document.getElementById("phoneField").value;

        var copyText = phone
        navigator.clipboard.writeText(copyText).then(function () {
            alert("copy success!");
        }, function () {
            alert("Failed to copy!");
        });
    }
</script>
